    "@typescript-eslint/parser": "^8.26.0",
    "eslint": "^9.21.0",
    "globals": "^16.0.0",
    "prettier": "^3.5.3",
    "typescript": "^5.5.3",
    "typescript-eslint": "^8.26.0"
